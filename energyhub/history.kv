#:import DatePicker energyhub.datepicker.DatePicker
#:import HistoryPanel energyhub.history_panel.HistoryPanel
#:include energyhub/utils.kv

<HistoryPanel>:
    orientation: 'vertical'
    models: app.models
    CollapsibleDatePicker:
        id: history_date
        on_date: root.build_graphs(self.date)
        size_hint_y: None
    RefreshOnScrollContainer:
        on_scroll_y: root.check_pull_refresh(self)
        height: root.height
        id: scroll_panel
        BoxLayout:
            size_hint_y: None
            height: root.total_graph_height
            orientation: 'vertical'
            id: graph_panel