#:import DatePicker energyhub.datepicker.DatePicker
#:include energyhub/utils.kv

<HistoryPanel@BoxLayout>:
    orientation: 'vertical'
    CollapsibleDatePicker:
        id: history_date
        on_date: app.build_history_graphs(self.date)
        size_hint_y: None
    RefreshOnScrollContainer:
        on_scroll_y: app.check_pull_refresh_history(self)
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            id: graph_panel