#:kivy 1.0

BoxLayout:
    orientation: 'vertical'
    Label:
        text: 'Dene Road Energy Hub'
    Button:
        text: 'Refresh'
        on_press: app.refresh()
    Label:
        text: 'Solar Production'
    Label:
        id: solar_prod_display
        text: '- kW'
    Label:
        text: 'Battery Production'
    Label:
        id: battery_prod_display
        text: '- kW'
    Label:
        text: 'Battery Level'
    Label:
        id: battery_level_display
        text: '- %'
